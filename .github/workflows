name: Build Tech Brief

on:
  push:
    branches: [ main ]          # also builds automatically when you push
  schedule:
    - cron: "0 */3 * * *"       # every 3 hours
  workflow_dispatch:             # allow manual runs too

permissions:
  contents: write                # REQUIRED to push to gh-pages

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          pip install feedparser beautifulsoup4 sumy python-slugify jinja2

      - name: Build static site
        run: |
          python scripts/build.py
          test -f site/index.html  # fail fast if site/ not built

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}   # uses repo token
          publish_dir: site                           # must exist
          publish_branch: gh-pages
          user_name: "github-actions[bot]"            # set committer identity
          user_email: "41898282+github-actions[bot]@users.noreply.github.com"
